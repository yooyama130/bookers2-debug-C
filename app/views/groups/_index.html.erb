<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>参加人数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
        </td>
        <td><%= link_to group.name, group_path(group), class: "group_#{group.id}" %></td>
        <td><%= group.introduction %></td>
        <td><%= group.users.count %></td>
        <% if group.owner_id == current_user.id %>
          <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success edit_group_#{group.id}" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>