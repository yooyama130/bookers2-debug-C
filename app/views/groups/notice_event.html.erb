<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Event Mail</h2>
      <%= form_with url: send_an_email_path(@group), local: true do |f| %>
        <div class = "form-group mt-2">
          <%= f.label :title, "タイトル", class: "my-2" %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group mt-2">
          <%= f.label :body, "本文", class: "my-2" %><br>
          <%= f.text_area :body, class: "form-control", style: "height: 300px" %>
        </div>
        <div class="form-group mt-2">
          <%= f.submit "Send an email", class: 'btn btn-primary' %>
        </div>
      <% end %>
  </div>
</div>
